<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appSettings>
    <add key="URLIncludesProjectName" value="True" />
    <add key="LogPath" value="~\Logs" />
    <add key="PerfCountersAreMandatory" value="True" />
    <add key="CacheEnabled" value="True" />
    <add key="TfsUrl" value="https://tfs03.codeplex.com,https://tfs01.codeplex.com" />
  </appSettings>
  <connectionStrings />
  <system.net>
    <connectionManagement>
      <add address="*" maxconnection="8000"/>
    </connectionManagement>
  </system.net>
  <system.web>
    <customErrors mode="Off" />
    <compilation debug="true" />
    <authentication mode="None" />
    <!--
    IIS 6.0 / 5.1
    <httpHandlers>
      <add verb="*" path="*" type="SvnBridge.Web.SvnBridgeHttpHandler, SvnFacade.Library" />
    </httpHandlers>
    -->
  </system.web>
  <!-- IIS 7.0 -->
  <system.webServer>
    <handlers>
      <clear/>
      <add name="SvnBridgeHandler" 
           path="*" 
           verb="*" 
           responseBufferLimit="0" 
           type="SvnBridge.Web.SvnBridgeHttpHandler" 
           resourceType="Unspecified" 
           preCondition="integratedMode" />
    </handlers>
    <security>
      <requestFiltering>
        <fileExtensions>
          <clear/>
        </fileExtensions>
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>
